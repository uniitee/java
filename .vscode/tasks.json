{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile All Java Files",
      "type": "shell",
      "command": "javac",
      "args": [
        "-d",
        "out",
        "${workspaceFolder}/com/engineeringdigest/javacore//*.java"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$javac"]
    },
    {
      "label": "Run Java Class",
      "type": "shell",
      "command": "java",
      "args": ["-cp", "out", "com.engineeringdigest.javacore.test.Test"],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}